= simple_form_for(form, as: :user, url: sign_up_path, defaults: { required: false, label: false }) do |f|
  = f.input :login, placeholder: t(:'.pick_a_username')
  = f.input :email, placeholder: t(:'.your_email_address')
  = f.input :password, placeholder: t(:'.create_a_password')
  = f.button :submit, t(:sign_up), class: "btn btn-success"
